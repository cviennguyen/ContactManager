@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Contact Manager";
}

<a asp-controller="Contact" asp-action="Add" class="btn btn-outline-primary">Add Contact</a>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col">Category</th>
    </thead>
    @foreach (Contact contact in Model)
    {
        <tr scope="row">
            <td><a class="text-decoration-none" asp-controller="Contact" asp-action="Details" asp-route-id=@contact.ContactId asp-route-slug=@contact.Slug>@contact.Firstname</a></td>
            <td><a class="text-decoration-none" asp-controller="Contact" asp-action="Details" asp-route-id=@contact.ContactId asp-route-slug=@contact.Slug>@contact.Lastname</a></td>
            <td>@contact.Phone</td>
            <td>@contact.Email</td>
            <td>@contact.Category.Name</td>
        </tr>
    }
</table>
