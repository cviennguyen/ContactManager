@model Contact;
@{
    ViewData["Title"] = "Detail Contact";
}

<h2>Contact Details</h2>
<table class="table table-striped table-dark">
    <tr>
        <td>Name</td>
        <td>@Model.Firstname @Model.Lastname</td>
    </tr>
    <tr>
        <td>Phone</td>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Category</td>
        <td>@Model.Category.Name</td>
    </tr>
    <tr>
        <td>Organization</td>
        <td>@Model.Organization</td>
    </tr>
    <tr>
        <td>Date added</td>
        <td>@Model.DateAdded</td>
    </tr>
</table>
<a asp-controller="Contact" asp-action="Edit" asp-route-id=@Model.Category.CategoryId asp-route-slug=@Model.Slug class="btn btn-primary">Edit</a>
<a asp-controller="Contact" asp-action="Delete"  asp-route-id=@Model.Category.CategoryId asp-route-slug=@Model.Slug class="btn btn-primary">Delete</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>